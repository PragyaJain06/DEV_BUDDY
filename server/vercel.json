{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "src/cron.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/cron", "dest": "/src/cron.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "crons": [
    { "path": "/api/cron", "schedule": "0 8 * * *" }
  ]
}

