{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "crons": [
    { 
      "path": "/api/cron", 
      "schedule": "0 8 * * *"
    }
  ]
}
